// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Vercel Postgres (Neon) 用の環境変数を使用
  url       = env("POSTGRES_PRISMA_URL")
  // 環境変数が足りない場合があるため、directUrlは一旦無効化します
  // directUrl = env("POSTGRES_URL_NON_POOLING")
}

// QRコードテーブル
model QrCode {
  id          String   @id @default(uuid())
  name        String?  // ユーザーが付けた名前（任意）
  targetUrl   String   // 遷移先URL
  manageToken String   @unique // 管理URL用のランダムトークン
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // スキャンログとのリレーション
  scanLogs QrScanLog[]

  @@map("qr_codes")
}

// スキャンログテーブル
model QrScanLog {
  id        String   @id @default(uuid())
  qrId      String   // 紐づくQRのid
  scannedAt DateTime @default(now())
  userAgent String?  // UA（簡易的）
  ipHash    String?  // 匿名化したIP（任意）

  // 追加の分析用情報
  deviceType String? // 端末種別（desktop / mobile / tablet など）
  os         String? // OS名（iOS / Android / Windows など）
  browser    String? // ブラウザ名（Chrome / Safari など）

  // 大まかな地域情報（Vercel が付与するヘッダーから取得）
  country String? // 国コード（JP など）
  region  String? // 地域（都道府県など）
  city    String? // 都市名

  // アクセス時の時間帯（0-23時）
  hour Int?

  // QRコードとのリレーション
  qrCode QrCode @relation(fields: [qrId], references: [id], onDelete: Cascade)

  @@map("qr_scan_logs")
}